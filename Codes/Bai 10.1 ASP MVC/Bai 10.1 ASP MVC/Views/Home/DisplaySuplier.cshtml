@model PagedList.IPagedList<Bai_10._1_ASP_MVC.Models.Nha_CC>
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "DisplaySuplier";
}

<h2>DANH SÁCH NHÀ CUNG CẤP</h2>
