
@{
    ViewBag.Title = "Index";
}

<style>
    #dvPreview1 {
        width: 100px;
        height: 100px;
    }
</style>

<h2>Index</h2>
<h2>STAFF INFOMATION</h2>
<form action="/Staff/Save" method="post" name="f1" enctype="multipart/form-data">
    StaffID: <br /> <input type="text" name="txtID" value="@ViewBag.id" /> <br />
    StaffName: <br /> <input type="text" name="txtName" value="@ViewBag.name" /> <br />
    Date of Birth: <br /> <input type="date" name="txtDate" value="@ViewBag.birthday" /> <br />
    Salary: <br /> <input type="text" name="txtSalary" value="@ViewBag.salary" /> <br />
    Image:
    <div>
        <input type="file" name="myfileImage" id="fileupload" class="fileupload1" /> <hr />
        <b>Live Preview</b> <br />
        <img src="@ViewBag.image" id="dvPreview1" />
    </div>
    <input type="submit" name="save" value="Save" />
    <input type="button" name="open" value="Open" onclick="location.href= '@Url.Action("Open", "Staff")'" />
</form>

